{
  "manifest_version": 2,

  "name": "Negative Risk Extension",
  "description": "This extension will display whether it is a good time to purchase shares with negative risk.",
  "version": "0.2",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.predictit.org/Market/*"],
      "js": ["jquery-3.1.1.slim.min.js", "predictit.js"],
      "run_at": "document_idle"
    }
  ],

  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": false
  },

  "permissions": [
    "storage",
    "activeTab",
    "https://www.predictit.org/"
  ]
}

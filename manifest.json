{
  "manifest_version": 2,

  "name": "Negative Risk Extension",
  "description": "This extension will display whether it is a good time to purchase shares with negative risk.",
  "version": "0.6",
  "icons": {
    "16": "icon16.png",
    "24": "icon24.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon.png"
  },

  "browser_action": {
    "name": "PredictIt Status",
    "default_title": "PredictIt",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "24": "icon24.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "64": "icon64.png",
      "128": "icon.png"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://www.predictit.org/Market/*", "https://predictit.com/Market/*"],
      "js": ["jquery-3.1.1.slim.min.js", "predictit.js"],
      "run_at": "document_idle"
    }
  ],

  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": false
  },

  "web_accessible_resources": [
    "*.css",
    "img/*.png"
  ],

  "permissions": [
    "storage",
    "notifications",
    "activeTab",
    "https://predictit.com/",
    "https://www.predictit.org/"
  ]
}
